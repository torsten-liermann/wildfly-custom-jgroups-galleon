<?xml version="1.0" encoding="UTF-8"?>
<installation xmlns="urn:jboss:galleon:provisioning:3.0">
    <!-- 
        No clustering configuration.
        This works as expected - no JGroups subsystem is included.
    -->
    <feature-pack location="org.wildfly:wildfly-ee-galleon-pack:28.0.1.Final">
        <default-configs inherit="false"/>
        <config model="standalone" name="standalone.xml">
            <layers>
                <include name="cloud-server"/>
                <!-- Simply don't include web-clustering layer -->
            </layers>
        </config>
    </feature-pack>
</installation>