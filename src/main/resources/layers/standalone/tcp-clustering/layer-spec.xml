<?xml version="1.0" encoding="UTF-8"?>
<layer-spec xmlns="urn:jboss:galleon:layer-spec:1.0" name="tcp-clustering">
    <!-- Description must be outside as comment, not as element -->
    <!-- Layer for TCP-only clustering. Should provide clustering capabilities with only TCP stack (no UDP). -->
    
    <dependencies>
        <layer name="cloud-server"/>
        <layer name="transactions"/>
    </dependencies>
    
    <!-- 
        Try different feature groups based on attempt:
        - attempt1-tcp-only-with-origin
        - attempt2-tcp-only-excludes  
        - attempt3-tcp-only-complete
    -->
    <feature-group name="valid-attempt-tcp-only"/>
    
</layer-spec>